<DModal @title={{i18n "admin.events.connection.filters.title"}} @class="connection-filters">
  <div class="filters">
    {{#each this.model.connection.filters as |filter|}}
      <div class="filter">
        <ComboBox 
          @value={{filter.query_column}}
          @content={{this.queryColumns}}
          @onChange={{fn (mut filter.query_column)}}
          @options={{hash
            none="admin.events.connection.filter.query_column.select"
          }}
          @class="filter-column"
        />
        <Input 
          @value={{filter.query_value}}
          @placeholder={{i18n "admin.events.connection.filter.query_value"}}
          @class="filter-value"
        />
        <DButton
          @action={{fn this.removeFilter filter}}
          @icon="times"
          @title="admin.events.connection.filter.remove.title"
        />
      </div>
    {{/each}}
  </div>
  
  <DButton
    @action={{this.addFilter}}
    @icon="plus"
    @class="add-filter"
    @label="admin.events.connection.filters.add.label"
    @title="admin.events.connection.filters.add.title"
  />
</DModal>

<div class="modal-footer">
  <DButton
    @class="btn-primary"
    @action={{this.closeModal}}
    @label="admin.events.connection.filters.done.label"
    @title="admin.events.connection.filters.done.title"
  />
</div>