<DModal @title={{i18n "admin.events.event.delete.title"}} @class="delete-event-modal">
  <div class="events">
    {{#each @model.events as |event|}}
      <div class="event">{{event.name}}</div>  
    {{/each}}
  </div>

  <div class="target-control">
    <ComboBox
      @content={{this.deleteTargets}}
      @value={{this.deleteTarget}}
      @onChange={{fn (mut this.deleteTarget)}}
    />
  </div>

  <div class="modal-footer">
    <DButton
      @class="btn-primary"
      @action={{this.delete}}
      @label={{this.btnLabel}}
      @disabled={{this.destroying}}
    />
    <DButton
      @class="btn-flat"
      @label="composer.modal_cancel"
      @action={{this.closeModal}}
      @disabled={{this.destroying}}
    />
    <ConditionalLoadingSpinner @condition={{this.destroying}} @size="small" />
  </div>
</DModal>